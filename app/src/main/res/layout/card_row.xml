<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/cardRow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <TextView
           android:id="@+id/productLabel"
           android:text="Product:"
           android:textSize="18sp"
           android:textColor="@color/colorPrimary"
           android:textStyle="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/productVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/productLabel"
            android:layout_toEndOf="@+id/productLabel"
            android:text="Wheat"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/quantityLabel"
            android:text="Quantity:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/typeLabel"/>

        <TextView
            android:id="@+id/quantityVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/quantityLabel"
            android:layout_alignStart="@+id/productVal"
            android:text="3600 kg"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/typeLabel"
            android:text="Seller:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/productLabel"/>

        <TextView
            android:id="@+id/typeVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/typeLabel"
            android:layout_toEndOf="@+id/productLabel"
            android:text="Neel"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/priceLabel"
            android:text="Price:"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/quantityLabel"/>

        <TextView
            android:id="@+id/priceVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/priceLabel"
            android:layout_toEndOf="@+id/productLabel"
            android:text="800000"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>